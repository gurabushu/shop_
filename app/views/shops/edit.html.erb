<%= form_with model: @shop, local:true do |f| %>
  <div class="wrapper">
    <p class="p-card">店舗名</p>
    <%= f.text_field :title, class: "text-field" %>
  </div>

  <div class="wrapper">
    <p class="p-card">店舗説明</p>
    <%= f.text_field :description, class: "text-field" %>
  </div>     

  <div class="wrapper">
    <p class="p-card">カテゴリー</p>
    <%= f.select :category, ["和食", "洋食", "中華", "その他"], {}, class: "text-field" %>
  </div>

  <div class="wrapper">
    <p class="p-card">開店時間：閉店時間</p>
    <%= f.time_select :open_time, { include_blank: true }, class: "time-field" %>〜
    <%= f.time_select :close_time, { include_blank: true }, class: "time-field" %>
  </div>  

  <div class="action-wrapper">
    <%= f.submit "更新", class: "action-btn" %>
  </div>
<% end %>

  <div class="destroy-wrapper">
    <%= button_to "削除",shop_path(@shop), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "destroy-btn" %>
  </div>



<%= link_to "戻る",shops_path, class:"back-link"%>